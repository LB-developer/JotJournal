    },
    "definitions": {
        "types.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "something went wrong"
                }
            }
        },
        "types.JWTToken": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string",
                    "example": "header.payload.signature"
                }
            }
        },
        "types.Jot": {
            "type": "object",
            "required": [
                "date",
                "habit",
                "id"
            ],
            "properties": {
                "date": {
                    "type": "string",
                    "example": "2006-01-02T15:04:00Z"
                },
                "habit": {
                    "type": "string",
                    "example": "workout"
                },
                "id": {
                    "type": "integer"
                },
                "isCompleted": {
                    "type": "boolean"
                }
            }
        },
        "types.Jots": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/types.Jot"
                }
            }
        },
        "types.LoginUserPayload": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "types.NewTask": {
            "type": "object",
            "required": [
                "deadline",
                "description"
            ],
            "properties": {
                "daily": {
                    "type": "boolean"
                },
                "deadline": {
                    "type": "string",
                    "example": "2025-05-01T00:00:00Z"
                },
                "description": {
                    "type": "string"
                },
                "monthly": {
                    "type": "boolean"
                },
                "weekly": {
                    "type": "boolean"
                }
            }
        },
        "types.RegisterUserPayload": {
            "type": "object",
            "required": [
                "email",
                "firstName",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "password": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 3
                }
            }
        },
        "types.Task": {
            "type": "object",
            "required": [
                "deadline",
                "description",
                "id",
                "userId"
            ],
            "properties": {
                "daily": {
                    "type": "boolean"
                },
                "deadline": {
                    "type": "string",
                    "example": "2006-01-02T15:04:00Z"
                },
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "isCompleted": {
                    "type": "boolean"
                },
                "monthly": {
                    "type": "boolean"
                },
                "userId": {
                    "type": "integer"
                },
                "weekly": {
                    "type": "boolean"
                }
            }
        },
        "types.TaskIDToDelete": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                }
            }
        }
    }
}