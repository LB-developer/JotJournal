            "patch": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Updates a task for the authenticated user based on the task ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "tasks"
                ],
                "summary": "Updates a task for the authenticated user",
                "parameters": [
                    {
                        "type": "string",
                        "description": "JWT access token for authentication",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "description": "Update task input",
                        "name": "Task",
                        "in": "body",
