                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Deletes a task for the authenticated user based on the task ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "tasks"
                ],
                "summary": "Deletes a task for the authenticated user",
                "parameters": [
                    {
                        "type": "string",
